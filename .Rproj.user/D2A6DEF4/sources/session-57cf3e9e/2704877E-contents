library(stringr)
month <- str_pad(1:12, width = 2, pad = 0)
pr_url <- str_glue("https://os.unil.cloud.switch.ch/chelsa02/chelsa/global/monthly/pr/1982/CHELSA_pr_{month}_1982_V.2.1.tif")
tas_url <- str_glue("https://os.unil.cloud.switch.ch/chelsa02/chelsa/global/monthly/tas/1982/CHELSA_tas_{month}_1982_V.2.1.tif")
pr <- terra::rast(pr_url)
tas <- terra::rast(tas_url)

install.packages("rnaturalearth")

library(terra)
tas_crop <- crop(tas, c(60, 61, 60, 61))
