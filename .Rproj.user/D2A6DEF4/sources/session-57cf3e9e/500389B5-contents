# tests/testthat/test-mock_tas.R
library(testthat)
library(terra)

test_that("mock_tas returns a SpatRaster with 12 layers", {
  # Call the function
  tas <- mock_tas()
  
  # Check class
  expect_s4_class(tas, "SpatRaster")
  
  # Check number of layers
  expect_equal(nlyr(tas), 12)
  
  # Check layer names follow expected pattern
  expected_names <- sprintf("tas_%02d", 1:12)
  expect_equal(names(tas), expected_names)
  
  # Check dimensions
  expect_equal(dim(tas)[1:2], c(20, 20))  # 20 rows, 20 cols
  
  # Check CRS is WGS84
  expect_true(grepl("4326", crs(tas)))
})